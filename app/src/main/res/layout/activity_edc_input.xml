<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

        <ImageView
                android:padding="8dp"
                android:src="@drawable/logo_white"
                android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"/>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".MainActivity"
            tools:showIn="@layout/app_bar_main">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <LinearLayout
                        android:padding="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="Input Nominal Bayar"
                            android:layout_width="match_parent" android:layout_height="wrap_content"/>


                    <TextView
                            android:id="@+id/tv_amount"
                            android:layout_margin="32dp"
                            android:textSize="48sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text=""
                            android:layout_width="match_parent" android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:id="@+id/menu1"
                                    android:background="@drawable/circle_grey"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">


                                <TextView
                                        android:textColor="@android:color/black"
                                        android:textSize="28sp"
                                        android:text="1"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent" android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:id="@+id/menu2"
                                    android:background="@drawable/circle_grey"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">

                                <TextView
                                        android:textColor="@android:color/black"
                                        android:textSize="28sp"
                                        android:text="2"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent" android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:id="@+id/menu3"
                                    android:background="@drawable/circle_grey"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">


                                <TextView
                                        android:textColor="@android:color/black"
                                        android:textSize="28sp"
                                        android:text="3"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent" android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:id="@+id/menu4"
                                    android:background="@drawable/circle_grey"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">


                                <TextView
                                        android:textColor="@android:color/black"
                                        android:textSize="28sp"
                                        android:text="4"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent" android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:id="@+id/menu5"
                                    android:background="@drawable/circle_grey"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">

                                <TextView
                                        android:textColor="@android:color/black"
                                        android:textSize="28sp"
                                        android:text="5"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent" android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:id="@+id/menu6"
                                    android:background="@drawable/circle_grey"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">


                                <TextView
                                        android:textColor="@android:color/black"
                                        android:textSize="28sp"
                                        android:text="6"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent" android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:id="@+id/menu7"
                                    android:background="@drawable/circle_grey"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">


                                <TextView
                                        android:textColor="@android:color/black"
                                        android:textSize="28sp"
                                        android:text="7"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent" android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:id="@+id/menu8"
                                    android:background="@drawable/circle_grey"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">

                                <TextView
                                        android:textColor="@android:color/black"
                                        android:textSize="28sp"
                                        android:text="8"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent" android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:id="@+id/menu9"
                                    android:background="@drawable/circle_grey"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">


                                <TextView
                                        android:textColor="@android:color/black"
                                        android:textSize="28sp"
                                        android:text="9"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent" android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:visibility="invisible"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:background="@drawable/circle_grey"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">


                                <TextView
                                        android:textColor="@android:color/black"
                                        android:textSize="28sp"
                                        android:text="1"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent" android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:id="@+id/menu0"
                                    android:background="@drawable/circle_grey"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">

                                <TextView
                                        android:textColor="@android:color/black"
                                        android:textSize="28sp"
                                        android:text="0"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent" android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:visibility="invisible"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:background="@drawable/circle_grey"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp">


                                <TextView
                                        android:textColor="@android:color/black"
                                        android:textSize="28sp"
                                        android:text="3"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent" android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <Button
                            android:id="@+id/btn_next"
                            android:text="LANJUT"
                            android:textColor="@android:color/white"
                            android:background="@drawable/button_accent"
                            android:layout_width="match_parent" android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>